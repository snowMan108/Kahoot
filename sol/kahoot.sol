// File contracts/Contest.sol

contract Contest is Ownable {
    using SafeERC20 for IERC20;

    struct Contestants {
        string userName;
        bool entranceFeePaid;
    }

    struct ContestInfo {
        IERC20 entranceToken;
        string contestName;
        uint256 hostingFee;
        uint256 entranceFee;
        uint256 rewardAmount;
        bool ended;
    }

    address hostingFeeReceiver = address(owner());

    ContestInfo[] public contestInfo;

    mapping(uint256 => mapping(address => Contestants)) public contestantInfo;

    event ContestantAdded(address indexed contestant, string indexed userName);
    event ContestEnded(uint256 indexed cid);
    event RewardSent(address[] indexed winner, uint256 indexed cid, uint256 indexed amount);

    function setHostingFeeReceiver(address _feeReceiver) external onlyOwner {
        hostingFeeReceiver = _feeReceiver;
    }

    function addContest(
        IERC20 _entranceToken,
        string memory _contestName,
        uint256 _hostingFee,
        uint256 _entranceFee,
        uint256 _rewardAmount
    ) external onlyOwner {
        contestInfo.push(
            ContestInfo({
                entranceToken: _entranceToken,
                contestName: _contestName,
                hostingFee: _hostingFee,
                entranceFee: _entranceFee,
                rewardAmount: _rewardAmount,
                ended: false
            })
        );
    }

    function reward(address[] calldata _winner, uint256 _cid) external onlyOwner {
        ContestInfo storage contest = contestInfo[_cid];
        require(contest.rewardAmount > 0);
        if (!contest.ended) {
            endContest(_cid);
        }
        uint256 fee = (contest.rewardAmount * contest.hostingFee) / 100000;
        contest.entranceToken.safeTransfer(hostingFeeReceiver, fee);
        uint256 rewardAmount = contest.rewardAmount - fee;
        for (uint256 i = 0; i < _winner.length; i++) {
            uint256 rewardPortion = rewardAmount / _winner.length;
            contest.entranceToken.safeTransfer(_winner[i], rewardPortion - fee);
        }

        emit RewardSent(_winner, _cid, contest.rewardAmount - fee);
    }

    function enter(string memory _userName, uint256 _cid) external {
        ContestInfo storage contest = contestInfo[_cid];
        Contestants storage contestant = contestantInfo[_cid][msg.sender];
        require(
            contest.entranceToken.balanceOf(msg.sender) >=
                contest.entranceFee &&
                !contestant.entranceFeePaid &&
                !contest.ended
        );
        contest.entranceToken.approve(address(this), contest.entranceFee);
        contest.entranceToken.safeTransferFrom(
            address(msg.sender),
            address(this),
            contest.entranceFee
        );
        contestant.userName = _userName;
        contestant.entranceFeePaid = true;
        emit ContestantAdded(address(msg.sender), _userName);
    }

    function endContest(uint256 _cid) public onlyOwner {
        ContestInfo storage contest = contestInfo[_cid];
        require(!contest.ended);
        contest.ended = true;
        emit ContestEnded(_cid);
    }
}
